<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MyAvaloniaApp2.MainWindow"
        Width="400" Height="400" Title="Shape Factory">
    <StackPanel>
        <!-- Выбор фабрики (цвета) -->
        <ComboBox Name="FactorySelector" SelectionChanged="OnFactoryChanged" Width="150" Margin="10">
            <ComboBoxItem Content="Red Factory"/>
            <ComboBoxItem Content="Blue Factory"/>
        </ComboBox>

        <!-- Выбор фигуры -->
        <ComboBox Name="ShapeSelector" SelectionChanged="OnShapeChanged" Width="150" Margin="10">
            <ComboBoxItem Content="Circle"/>
            <ComboBoxItem Content="Square"/>
            <ComboBoxItem Content="Triangle"/>
        </ComboBox>

        <!-- Поле для отрисовки фигур -->
        <Canvas Name="ShapesCanvas" Background="White" Width="300" Height="200" Margin="10"/>
    </StackPanel>
</Window>
